@using BoookStoreDatabase2.BLL.Models.DTO;
@model List<ApplicationUsersDTO>

@{
    ViewBag.Title = "Users List";
}
<div class="container">


    <table class="table">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Role
                </th>
                <th>
                    UserName
                </th>
                <th>
                    Email
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => account.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => account.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => account.UserType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => account.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => account.Email)
                </td>
                <td>
                    <a class="btn btn-primary btn-lg" role="button" asp-action="LockUser" asp-controller="ApplicationUsers" asp-route-userId="@account.Id">Disable</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>


